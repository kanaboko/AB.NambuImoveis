@model IEnumerable<AB.NambuImoveis.Application.ViewModels.PessoaViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PessoaFisica.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PessoaFisica.CPF)
        </th>
        <th></th>
    </tr>
    @foreach (var cliente in Model)
    {
        if (cliente.TipoPessoa == AB.NambuImoveis.Application.ViewModels.Enums.TipoPessoaViewModel.PessoaFisica)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => cliente.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => cliente.DataCadastro)
                </td>
                <td>
                    @Html.DisplayFor(model => cliente.PessoaFisica.Nome)
                </td>
                <td>
                    @Html.DisplayFor(model => cliente.PessoaFisica.CPF)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = cliente.Id, tipoPessoa = cliente.TipoPessoa.ToString() }) |
                    @Html.ActionLink("Details", "Details", new { id = cliente.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = cliente.Id })
                </td>
            </tr>
        }
    }

</table>

