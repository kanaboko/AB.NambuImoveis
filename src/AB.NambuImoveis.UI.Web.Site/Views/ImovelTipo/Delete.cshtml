@model AB.NambuImoveis.Application.ViewModels.ImovelTipoViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ImovelTipoViewModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        @foreach (var detalheTipo in Model.ImovelDetalheTipos)
        {
            <dd>
                @Html.DisplayFor(modelDetalhe => detalheTipo.Descricao)<br />
            </dd>
            foreach (var detalheBase in detalheTipo.ImovelDetalheBases)
            {
                <dd>
                    @Html.DisplayFor(modelDetalheBase => detalheBase.Descricao)<br />
                </dd>
            }
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
