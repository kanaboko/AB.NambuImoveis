@model AB.NambuImoveis.Application.ViewModels.ImovelTipoViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>ImovelTipoViewModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        @foreach (var detalheTipo in Model.ImovelDetalheTipos)
        {
            <dd>
                @Html.DisplayFor(modelDetalhe => detalheTipo.Descricao)<br />
            </dd>
            foreach (var detalheBase in detalheTipo.ImovelDetalheBases)
            {
                <dd>
                    @Html.DisplayFor(modelDetalheBase => detalheBase.Descricao)<br />
                </dd>
            }
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
