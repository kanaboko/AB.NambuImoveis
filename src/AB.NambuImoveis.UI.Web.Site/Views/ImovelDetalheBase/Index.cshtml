@model IEnumerable<AB.NambuImoveis.Application.ViewModels.ImovelDetalheBaseViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoDados)
        </th>        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            @switch (item.TipoDados)
            {
                case AB.NambuImoveis.Application.ViewModels.Enums.TipoDadosViewModel.Numérico:
                    <td>
                        <p>Input - numérico</p>
                        @Html.TextBox("Enum_TipoDados", "", null, new { placeholder = "Tipo numérico" })
                    </td>
                    break;
                case AB.NambuImoveis.Application.ViewModels.Enums.TipoDadosViewModel.Alfanumérico:
                    <td>
                        <p>Input - alfanumérico</p>
                        @Html.TextBox("Enum_TipoDados", "", null, new { placeholder = "Tipo Alfanumérico" })
                    </td>
                    break;
                case AB.NambuImoveis.Application.ViewModels.Enums.TipoDadosViewModel.Booleano:
                    <td>
                        <p>Checkbox - booleano</p>
                        @Html.CheckBox("Enum_TipoDados", false, new { @class = "checkbox" })
                    </td>
                    break;
                default:
                    break;
            }
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
